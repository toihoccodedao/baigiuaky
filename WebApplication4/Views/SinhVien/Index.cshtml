@model IEnumerable<WebApplication4.Models.SinhVien>

<h2>Danh sách Sinh Viên</h2>
<p>
    @Html.ActionLink("Thêm Sinh Viên", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã SV</th>
            <th>Họ Tên</th>
            <th>Giới Tính</th>
            <th>Ngày Sinh</th>
            <th>Ngành Học</th>
            <th>Hình Ảnh</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaSV</td>
                <td>@item.HoTen</td>
                <td>@item.GioiTinh</td>
                <td>@item.NgaySinh.ToShortDateString()</td>
                <td>@item.NganhHoc.TenNganh</td>
                <td>
                    <img src="~/@item.Hinh" alt="Ảnh sinh viên" style="width: 100px; height: auto;" />
                </td>
                <td>
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.MaSV }) |
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.MaSV }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaSV })
                </td>
            </tr>
        }
    </tbody>
</table>

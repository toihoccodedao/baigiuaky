@model IEnumerable<WebApplication4.Models.HocPhan>

@{
    ViewData["Title"] = "Danh Sách Học Phần";
}

<div class="container mt-5">
    <!-- Title -->
    <div class="text-center mb-4">
        <h2 class="text-uppercase text-primary fw-bold">Danh Sách Học Phần</h2>
        <hr class="w-25 mx-auto border-primary">
    </div>

    <!-- Thông báo -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle-fill"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Table -->
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle text-center">
            <thead class="table-primary text-uppercase">
                <tr>
                    <th>Mã Học Phần</th>
                    <th>Tên Học Phần</th>
                    <th>Số Tín Chỉ</th>
                    <th>Hành Động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold">@item.MaHP</td>
                        <td class="text-start">@item.TenHP</td>
                        <td>@item.SoTinChi</td>
                        <td>
                            <form method="post" asp-action="DangKy" asp-controller="HocPhan" class="d-inline-block">
                                <input type="hidden" name="maHP" value="@item.MaHP" />
                                <button type="submit" class="btn btn-success btn-sm">
                                    <i class="bi bi-plus-circle"></i> Đăng Ký
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Footer -->
    <footer class="text-center mt-5 text-muted">
        &copy; 2024 - <span class="fw-bold">Your Name</span>
    </footer>
</div>
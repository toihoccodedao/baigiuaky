@{
    ViewData["Title"] = "Đăng Nhập";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <!-- Card Layout -->
    <div class="card shadow-lg border-0 rounded-4" style="width: 400px;">
        <!-- Header -->
        <div class="card-header bg-primary text-white text-center py-3">
            <h3 class="mb-0">Đăng Nhập</h3>
        </div>

        <!-- Body -->
        <div class="card-body">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @Html.ValidationSummary(false)
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="DangNhap" method="post" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()

                <!-- MaSV Input -->
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="MaSV" name="MaSV" placeholder="Nhập mã sinh viên" required>
                    <label for="MaSV" class="fw-bold">Mã Sinh Viên</label>
                </div>

                <!-- Submit Button -->
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg w-100">
                        <i class="bi bi-box-arrow-in-right"></i> Đăng Nhập
                    </button>
                </div>
            </form>
        </div>

        <!-- Footer -->
        <div class="card-footer text-center">
            <a href="@Url.Action("Index", "HocPhan")" class="text-decoration-none text-primary fw-bold">
                <i class="bi bi-arrow-left-circle"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>